# Terraform variables for {{ project_name }}-{{ environment }}
# Auto-generated by DRY2 CLI
#
# NOTE: Credentials are provided via environment variables for security
# 
# In CI/CD (GitHub Actions):
#   - Credentials come from GitHub Secrets
#   - Set TF_VAR_civo_token, TF_VAR_upstash_email, TF_VAR_upstash_api_key
#
# For local development:
#   - Create a .env file (git-ignored) with:
#     export TF_VAR_civo_token="your-token"
#     export TF_VAR_upstash_email="your-email"
#     export TF_VAR_upstash_api_key="your-key"
#   - Source it before running: source .env && terraform plan
#
# NEVER commit credentials to git!

# Project configuration
project_name   = "{{ project_name }}"
region         = "{{ region }}"
upstash_region = "{{ upstash_region }}"

# Kubernetes configuration
kubernetes_version = null

node_pools = [
  {
    label      = "general"
    size       = "{{ node_size }}"
    node_count = {{ node_count }}
  }
]

# Storage configuration
media_bucket_size_gb  = {{ media_bucket_size_gb }}
static_bucket_size_gb = {{ static_bucket_size_gb }}

# Redis configuration
redis_max_memory_mb          = {{ redis_max_memory_mb }}
redis_max_commands_per_second = {{ redis_max_commands_per_second }}


