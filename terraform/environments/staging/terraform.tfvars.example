# Copy this file to terraform.tfvars and fill in your values
# NEVER commit terraform.tfvars to version control!
#
# IMPORTANT: Credentials should be provided via environment variables
# 
# In CI/CD (GitHub Actions):
#   - Set GitHub Secrets: STAGING_CIVO_TOKEN, STAGING_UPSTASH_EMAIL, STAGING_UPSTASH_API_KEY
#
# For local development, create a .env file:
#   export TF_VAR_civo_token="your-civo-api-token-here"
#   export TF_VAR_upstash_email="your-upstash-email@example.com"
#   export TF_VAR_upstash_api_key="your-upstash-api-key-here"
#   
#   Then: source .env && terraform plan

# Project configuration
project_name   = "myapp"
region         = "NYC1"
upstash_region = "us-east-1"

# Kubernetes configuration
kubernetes_version = null # Use latest stable version

node_pools = [
  {
    label      = "general"
    size       = "g4s.kube.medium" # 2 CPU, 4GB RAM
    node_count = 3
  }
]

# Storage configuration
media_bucket_size_gb  = 100 # GB
static_bucket_size_gb = 30  # GB

# Redis configuration
redis_max_memory_mb           = 512   # MB
redis_max_commands_per_second = 50000 # commands/sec
redis_multi_zone              = false




